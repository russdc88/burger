<div class="container-fill">

	<h1 class="text-center header">Yum Yum Burgers!</h1>
	<div class="row">
		<div class="col-lg-12">

			<img class=" mx-auto d-block pt-3 pb-3" src="/assets/image/burger.jpg" alt="">

		</div>
		<div class="col-lg-6">


			<h2 class="text-center pb-4">Burgers ready to be eaten</h2>

			<ul>
				{{#each burger}} {{#unless eaten}}
				<li> {{burger_name}}

					<button class="change-eaten" data-id="{{id}}" data-neweaten="true">
						Eat Burger
					</button>
					<br>
				</li>

				{{/unless}} {{/each}}
			</ul>
		</div>
		<div class="col-lg-6">

			<h2 class="text-center pb-4">Eaten Burgers:</h2>

			<ul>
				{{#each burger}} {{#if eaten}}
				<li>
					<del>
						{{burger_name}}
					</del>
					<br>
				</li>
				{{/if}} {{/each}}
			</ul>
		</div>
	</div>

	<div class="text-center pt-4">

		<h2>Add a Burger!</h2>
		<form class="create-form">

			<div class="form-group">
				<label for="bu">Burger Name:</label>
				<input type="text" id="bu" name="name">
			</div>

			<button type="submit">Add Burger</button>
		</form>
	</div>
</div>